<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/BackgroundHome"
    tools:context="com.sethphat.gigapet.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">


    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/imgGif1"
            android:layout_width="@dimen/img_gifload_width"
            android:layout_height="@dimen/img_gifload_height" />
        <ImageView
            android:id="@+id/imgGif2"
            android:layout_width="@dimen/img_gifload_width"
            android:layout_height="@dimen/img_gifload_height" />
        <ImageView
            android:id="@+id/imgGif3"
            android:layout_width="@dimen/img_gifload_width"
            android:layout_height="@dimen/img_gifload_height" />

    </LinearLayout>


</LinearLayout>
