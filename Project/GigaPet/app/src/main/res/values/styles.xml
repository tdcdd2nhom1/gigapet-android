<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackgroundHome">
        <item name="android:background">@drawable/home_none</item>
    </style>

    <style name="BackgroundYard">
        <item name="android:background">@drawable/background_yard</item>
    </style>

    <style name="PetStatus">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#fcd4dc</item>
    </style>

    <style name="PetName">
        <item name="android:background">#f368e0</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontFaceStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
